.row.text-center
  %h1  
    = "#{@user.firstname} #{@user.lastname}'s Profile"
%br
.row
  .col-lg-4.col-lg-offset-0.col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
    .container-fluid.form-box
      %h3.text-center User data
      %p= "First Name: #{@user.firstname}"
      %p= "Last Name: #{@user.lastname}"
      %p= "Email: #{@user.email}"
      %p= "Created: #{@user.created_at.strftime("%d-%m-%Y")}"
      - if user_signed_in? && current_user == @user
        %p= link_to "Edit profile", edit_user_registration_path
  .col-lg-8.col-lg-offset-0.col-md-10.col-md-offset-1.col-sm-12.col-sm-offset-0
    .container-fluid.reviews
      = render @reviews
%br
.navigation-buttons
  - if user_signed_in? && current_user == @user
    = link_to 'Edit', edit_user_registration_path
    \|
  = link_to 'Back', root_path, class: 'btn btn-primary'
